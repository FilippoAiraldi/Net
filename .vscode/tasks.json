{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "g++ build",
			"command": "/usr/bin/g++",
			"args": [
				// options
				"-Wall",
				// "-v",
				"-g",
				"-std=c++17",
				"-pthread",
				// to compile
				"${workspaceFolder}/*.cpp",
				// include
				"-I/home/filippo/Documents/Coding/Sdk/asio-1.18.0/include/",
				"-I/home/filippo/Documents/Coding/Sdk/Uuids/include/",
				"-I${workspaceFolder}/NetCommon/",
				// output
				"-o",
				"${workspaceFolder}/bin/output"
			],
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"clear": true // clear console before build
			}
		}
	]
}
